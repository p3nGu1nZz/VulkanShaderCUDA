#version 450
layout(local_size_x = 256) in;

layout(binding = 0) buffer InputA {
    float data[];
} inputA;

layout(binding = 1) buffer InputB {
    float data[];
} inputB;

layout(binding = 2) buffer Output {
    float data[];
} outputC;

void main() {
    uint idx = gl_GlobalInvocationID.x;
    outputC.data[idx] = inputA.data[idx] + inputB.data[idx];
}
